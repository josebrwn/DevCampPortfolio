
<div class="col-md-4">
  <div class="card" data-id="<%= portfolio_item.id %>">
    
    <span>
      <%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
    </span>
    
    <%= link_to portfolio_show_path(portfolio_item) do %>
      <%= image_tag portfolio_img(portfolio_item.thumb_image.to_s, 'thumb'), width: '100%' %>
    <% end %>
  
    <p class="card-text">
       <%= portfolio_item.subtitle %>
    </p>
  
    </div>
</div>